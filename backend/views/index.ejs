<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Python Online Compiler (Pyodide v0.26.4)</title>
    <script src="https://cdn.jsdelivr.net/pyodide/v0.26.4/full/pyodide.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/ace/1.4.12/ace.js"></script>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="container">
        <h1>Python Online Compiler</h1>
        <div class="editor-container">
            <div id="editor" style="height: 300px; width: 100%;"></div>
            <div class="button-group">
                <button onclick="runCode()" class="run-btn">Run Code</button>
                <button onclick="clearEditor()" class="clear-btn">Clear Editor</button>
            </div>
        </div>
        <div class="output-container">
            <h3>Output</h3>
            <pre id="output"></pre>
        </div>

        <!-- Section for AI Suggestions -->
        <div class="ai-suggestions-container">
            <h3>AI Code Suggestions</h3>
            <pre id="ai-suggestions"></pre>
        </div>

        <div id="loading" class="loading">Loading Pyodide...</div>
    </div>

    <!-- Ensure scripts are loaded after the page is ready -->
    <script>
        window.onload = function() {
            console.log("Window loaded");

            // Check if Ace editor is loaded
            if (typeof ace !== 'undefined') {
                console.log("Ace editor loaded successfully");
                const editor = ace.edit("editor");
                editor.setTheme("ace/theme/monokai");
                editor.session.setMode("ace/mode/python");
                editor.setFontSize(14);
                editor.setShowPrintMargin(false);
            } else {
                console.error("Ace editor not loaded");
            }

            // Initialize other necessary elements here
            loadPyodideAndPackages();
        };

        // Function to load Pyodide
        async function loadPyodideAndPackages() {
            const loadingElement = document.getElementById('loading');
            loadingElement.style.display = "block";

            try {
                const pyodide = await loadPyodide({ indexURL: "https://cdn.jsdelivr.net/pyodide/v0.26.4/full/" });
                loadingElement.style.display = "none";
                console.log("Pyodide loaded");
            } catch (error) {
                loadingElement.style.display = "none";
                console.error("Failed to load Pyodide:", error);
            }
        }
    </script>

    <!-- Load your custom JavaScript file after the page is ready -->
    <script src="/controllers/compiler.controller.js"></script>
</body>
</html>
